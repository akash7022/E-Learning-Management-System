    <div class=" container-fluid row col-12 col-sm-6 col-md-3 login-container">
      <%- include('messages.ejs') %>
        <form action="/loginauth" method="POST">
            <h1 style="text-align: center;">Login</h1>
            <div class="form-group col-auto">
              <label for="exampleInputEmail1" class="fw-bold un">USN</label>
              <input type="text" class="form-control un" id="exampleInputEmail1" name="USN" aria-describedby="emailHelp" placeholder="Enter USN">
            </div>
            <div class="form-group col-auto">
              <label for="exampleInputPassword1" class="fw-bold un">Password</label>
              <input type="password" class="form-control un" id="exampleInputPassword1" name="password" placeholder="Password" >
            </div>
            <button type="submit" class="btn btn-primary un en">Submit</button>
          </form>
    </div>
    


  </body>
</html>